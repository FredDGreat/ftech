<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#45a351" android:startColor="#7dca88" android:type="linear" />

                    <stroke android:width="1dp" android:color="#d8727376" />

                    <corners android:radius="4dp" />

                    <padding
                        android:bottom="12dp"
                        android:left="3dp"
                        android:right="3dp"
                        android:top="12dp"
                        />
                </shape>
            </item>
            <item >
                <bitmap android:gravity="center_vertical|right"
                    android:src="@android:drawable/arrow_down_float"
                    />
            </item>
        </layer-list>
    </item>

</selector>